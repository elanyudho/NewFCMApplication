<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FCMApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_lochmara</item>
        <item name="colorPrimaryVariant">@color/blue_lochmara</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/yellow_selective</item>
        <!-- Secondary brand color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="clearScreen.blueLoch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/blue_lochmara</item>
    </style>

    <style name="clearScreen.blueDim" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/blue_dim</item>
    </style>

    <style name="SearchViewText" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RoundedButton">
        <item name="cornerSize">6dp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageView10">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.FCMApplication.DotIndicatorTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorGravity">top</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="Theme.FCMApplication.FilterRoundedDragButton">
        <item name="cornerSize">3dp</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="behavior_peekHeight">350dp</item>
        <item name="behavior_hideable">true</item>
    </style>

    <style name="Theme.FCMApplication.BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="Theme.FCMApplication.TextTabLayout" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.FCMApplication.ChooserTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabRippleColor">@color/white</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabIndicatorColor">@color/blue_lochmara</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabMode">fixed</item>
        <item name="tabPaddingTop">0dp</item>
        <item name="tabPaddingBottom">0dp</item>
        <item name="tabTextColor">@color/blue_lochmara</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/Theme.FCMApplication.TextTabLayout</item>
    </style>
</resources>